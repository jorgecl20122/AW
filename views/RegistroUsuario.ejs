<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/registro.css">
</head>

<body>
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg">
                    <div class="card-header text-center">
                        <h1><strong>¡Bienvenido!</strong></h1>
                        <p><strong>Por favor, crea tu cuenta</strong></p>
                    </div>
                    
                    <div class="card-body">
                        <!-- Mensaje de error -->
                        <% if (error) { %>
                        <div class="alert alert-danger text-center" role="alert">
                            <%= error %>
                        </div>
                        <% } %>

                        <!-- Mensaje de éxito -->
                        <% if (success) { %>
                        <div class="alert alert-success text-center" role="alert">
                            <%= success %>
                        </div>
                        <% } %>

                        <!-- Formulario -->
                        <form action="/usuario/signup" method="post" id="registro-form">
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Nombre" required>
                                </div>
                                <div class="col-md-6">
                                    <input type="text" class="form-control" id="apellido" name="apellido" placeholder="Apellidos" required>
                                </div>
                            </div>
                            <div class="mb-3">
                                <input type="email" class="form-control" id="email" name="email" placeholder="Correo electrónico" required>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <input type="tel" class="form-control" id="telefono" name="telefono" placeholder="Teléfono" required>
                                </div>
                                <div class="col-md-6">
                                    <select id="id_concesionario" name="id_concesionario" class="form-select text-dark">
                                        <option value="" selected disabled>Seleccionar Concesionario</option>
                                        <% concesionarios.forEach(concesionario => { %>
                                        <option value="<%= concesionario.id %>"><%= concesionario.nombre %></option>
                                        <% }); %>
                                    </select>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="tipoUsuario" class="form-label">Tipo de Usuario:</label>
                                <div class="d-flex">
                                    <div class="form-check me-3">
                                        <input class="form-check-input" type="radio" name="rol" id="empleado" value="empleado" required>
                                        <label class="form-check-label" for="empleado">Empleado</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="rol" id="administrador" value="administrador" required>
                                        <label class="form-check-label" for="administrador">Administrador</label>
                                    </div>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="contrasena" class="form-label">Contraseña:</label>
                                <input type="password" class="form-control" id="contraseña" name="contraseña" placeholder="Introduzca la contraseña" required>
                            </div>
                            <div class="text-center">
                                <button class="btn btn-primary w-50" type="submit"><strong>Registrarse</strong></button>
                                <p class="mt-3"><a href="/usuario/login" class="link-primary">¿Ya tienes una cuenta?</a></p>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="/javascripts/script_usuarios.js"></script>

</body>

</html>