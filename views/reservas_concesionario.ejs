<div class="table-responsive">
  <% if (!concesionarios || concesionarios.length === 0) { %>
    <p class="text-center text-muted">No hay datos disponibles</p>
  <% } else { %>
    <table class="table table-striped table-hover align-middle">
      <thead class="table-secondary">
        <tr>
          <th>Concesionario</th>
          <th class="text-center">Total Reservas</th>
          <th class="text-center">Activas</th>
          <th class="text-center">Finalizadas</th>
          <th class="text-center">Canceladas</th>
        </tr>
      </thead>
      <tbody>
        <% concesionarios.forEach(c => { %>
          <tr>
            <td><strong><%= c.concesionario %></strong></td>
            <td class="text-center"><span class="badge bg-primary fs-6"><%= c.total_reservas || 0 %></span></td>
            <td class="text-center"><span class="badge bg-success fs-6"><%= c.activas || 0 %></span></td>
            <td class="text-center"><span class="badge bg-danger fs-6"><%= c.finalizadas || 0 %></span></td>
            <td class="text-center"><span class="badge bg-secondary fs-6"><%= c.canceladas || 0 %></span></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } %>
</div>
