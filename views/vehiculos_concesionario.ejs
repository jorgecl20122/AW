<% if (vehiculos && vehiculos.length > 0) { %>
  <table class="table table-striped table-hover align-middle">
    <thead class="table-secondary">
      <tr>
        <th>Matrícula</th>
        <th>Marca</th>
        <th>Modelo</th>
        <th>Año</th>
        <th>Plazas</th>
        <th>Autonomía</th>
        <th>Color</th>
        <th>Imagen</th>
      </tr>
    </thead>
    <tbody>
      <% vehiculos.forEach((v) => { %>
        <tr>
          <td><%= v.matricula %></td>
          <td><%= v.marca %></td>
          <td><%= v.modelo %></td>
          <td><%= v.anio_matriculacion %></td>
          <td><%= v.numero_plazas %></td>
          <td><%= v.autonomia_km %> km</td>
          <td><%= v.color %></td>
          <td>
            <% if (v.imagen) { %>
              <img src="<%= v.imagen %>" alt="Imagen" class="vehiculo-img">
            <% } else { %>
              -
            <% } %>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
<% } else { %>
  <p class="text-center alert alert-info">Este concesionario no tiene vehículos registrados.</p>
<% } %>
