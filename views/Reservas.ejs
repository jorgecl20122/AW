<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Gestión de Vehículos</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/vista.css">
</head>

<body data-user-role="<%= usuario ? usuario.rol : 'empleado' %>"> 

  <header class="header d-flex align-items-center p-3">
  <img src="/img/logo.png" alt="Logo Empresa" class="logo_img me-4">
  <div>
    <h4 class="mb-0 fw-bold">EcoFlota</h4>
    <small class="text-muted fw-bold"><em>Plataforma web de Gestión de Flotas de Vehículos Eléctricos</em></small>
  </div>
</header>


  <!-- Barra de navegación superior -->
<nav class="navbar navbar-expand-lg">
  <div class="container-fluid">
    <div class="d-flex align-items-center">
      <a href="/empleado/vista_empleado" class="btn-custom mx-2 nav-link" data-route="/empleado/vista_empleado"><i class="bi bi-house"></i><strong>Inicio</strong> </a>
      <a href="/empleado/mis_reservas" class="btn-custom mx-2 nav-link" data-route="/empleado/mis_reservas"><i class="bi bi-calendar-check "></i><strong> Reservas</strong> </a>
      <a href="#" class="btn-custom mx-2 nav-link" data-bs-toggle="modal" data-bs-target="#configuradorModal"><i class="bi bi-person-wheelchair"></i><strong>Accesibilidad</strong></a>
    </div>

    <div class="d-flex align-items-center ms-auto">
      <a href="/usuario/logout" class="btn btn-custom mx-2">
        <i class="bi bi-box-arrow-right"></i> <strong>Cerrar sesión</strong>
      </a>
    </div>
  </div>
</nav>


<!-- para lateral con las estadisticas y el usuario abajo-->
<div class="d-flex">
   <aside class="sidebar p-3">

        <!-- Información del usuario (PERFIL) -->
        <div class="user-info mt-auto d-flex flex-column align-items-center text-center gap-2">
          <% if (usuario) { %>
            <!-- Avatar -->
            <img id="userAvatar" src="<%= usuario.avatar %>" alt="Avatar" class="rounded-circle">
            <!-- Nombre + Email -->
            <div>
              <p class="mb-0 fw-bold">
                <%= usuario.nombre_completo %>
              </p>
              <small class="text-muted">
                <%= usuario.email %>
              </small>
            </div>
          <% } else { %>
            <img id="userAvatar" src="/img/default-avatar.png" alt="Avatar" class="rounded-circle">
            <div>
              <p class="text-danger">Usuario no cargado</p>
            </div>
          <% } %>
        </div>
    </aside>

    <main class="flex-grow-1 p-4">
        <div class="d-flex align-items-center mb-4">
          <h2 class="fw-bold">Mis Reservas</h2>
        </div>
      
        <!-- Parte dinámica de las reservas -->
        <div id="listaReservas" class="table-responsive">
          <% if (!reservas || reservas.length === 0) { %>
            <p class="text-center">No tienes reservas activas.</p>
          <% } else { %>
            <table class="table table-striped table-hover align-middle">
              <thead class="table-secondary">
                <tr>
                  <th>Vehículo</th>
                  <th>Matrícula</th>
                  <th>Fecha Inicio</th>
                  <th>Fecha Fin</th>
                  <th>Estado</th>
                  <th>Acciones</th>
                </tr>
              </thead>
              <tbody>
                <% reservas.forEach(function(r) { 
                  const fechaInicio = new Date(r.fecha_inicio).toLocaleString('es-ES');
                  const fechaFin = new Date(r.fecha_fin).toLocaleString('es-ES');
                  const estadoNormalizado = r.estado.toLowerCase();
                  const badgeClass = estadoNormalizado === 'activa' ? 'bg-success' : 'bg-danger';
                  const estadoTexto = r.estado.charAt(0).toUpperCase() + r.estado.slice(1);
                %>
                  <tr id="reserva-<%= r.id %>">
                    <td><%= r.vehiculo_marca %> <%= r.vehiculo_modelo %></td>
                    <td><%= r.vehiculo_matricula %></td>
                    <td><%= fechaInicio %></td>
                    <td><%= fechaFin %></td>
                    <td>
                      <span class="badge <%= badgeClass %>">
                        <%= estadoTexto %>
                      </span>
                    </td>
                    <td>
                      <% if (estadoNormalizado === 'activa') { %>
                        <button class="btn btn-cancelar-reserva" data-reserva-id="<%= r.id %>">
                          <i class="bi bi-x-circle"></i><strong> Cancelar </strong>
                        </button>
                      <% } else { %>
                        <span class="text-muted">-</span>
                      <% } %>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          <% } %>
        </div>
    </main>
</div>

<!--MODALES-->

<!-- Modal de accesibilidad -->
<div class="modal fade" id="configuradorModal" tabindex="-1" aria-labelledby="configuradorLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content shadow-lg rounded-4 border-0">
      <div class="modal-header text-white rounded-top-4">
        <h5 class="modal-title fw-bold" id="configuradorLabel">
          <i class="bi bi-sliders2-vertical me-2"></i> Configurador de Estilo
        </h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
      </div>
      <div class="modal-body p-4">
        <form id="form-configurador" class="row g-3">
          <!-- Tamaño de títulos -->
          <div class="col-md-6">
            <label for="fuente-titulo" class="form-label fw-semibold">Tamaño de fuente (Títulos)</label>
            <input type="range" id="fuente-titulo" min="1" max="3" step="0.1" value="1.5" class="form-range">
          </div>
          <!-- Tamaño de texto -->
          <div class="col-md-6">
            <label for="fuente-texto" class="form-label fw-semibold">Tamaño de fuente (Texto)</label>
            <input type="range" id="fuente-texto" min="1" max="2" step="0.1" value="1" class="form-range">
          </div>
          <!-- Color títulos -->
          <div class="col-md-6">
            <label for="color-titulos" class="form-label fw-semibold">Color de los títulos</label>
            <input type="color" id="color-titulos" class="form-control form-control-color" value="#000000">
          </div>
          <!-- Color texto -->
          <div class="col-md-6">
            <label for="color-texto" class="form-label fw-semibold">Color del texto</label>
            <input type="color" id="color-texto" class="form-control form-control-color" value="#333333">
          </div>
          <!-- Fondo sección -->
          <div class="col-md-6">
            <label for="fondo-seccion" class="form-label fw-semibold">Color de fondo</label>
            <input type="color" id="fondo-seccion" class="form-control form-control-color" value="#f8f9fa">
          </div>
          <!-- Subrayado enlaces -->
          <div class="col-md-6 d-flex align-items-center">
            <div class="form-check">
              <input type="checkbox" id="subrayado-enlaces" class="form-check-input">
              <label for="subrayado-enlaces" class="form-check-label fw-semibold">Subrayar enlaces</label>
            </div>
          </div>
          <!-- Contraste bajo -->
          <div class="col-md-6 d-flex align-items-center">
            <div class="form-check">
              <input type="checkbox" id="modo-contraste" class="form-check-input">
              <label for="modo-contraste" class="form-check-label fw-semibold">Modo bajo contraste</label>
            </div>
          </div>
          <!-- Paleta daltonismo -->
          <div class="col-md-6 d-flex align-items-center">
            <div class="form-check">
              <input type="checkbox" id="modo-daltonismo" class="form-check-input">
              <label for="modo-daltonismo" class="form-check-label fw-semibold">Paleta daltonismo</label>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer rounded-bottom-4">
        <button type="button" class="btn btn-primary" id="btnRestaurar">Restaurar valores</button>
      </div>
    </div>
  </div>
</div>

<!-- Scripts -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="/javascripts/script_empleado.js"></script>
<script src="/javascripts/accesibilidad.js"></script>

</body>
</html>
