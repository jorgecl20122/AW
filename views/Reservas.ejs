            <!-- Nombre + Email -->
            <div>
              <p class="mb-0 fw-bold">
                <%= usuario.nombre_completo %>
              </p>
              <small class="text-muted">
                <%= usuario.email %>
              </small>
            </div>
          <% } else { %>
